    "version": "0.2.0",
    "configurations": [
        {
            "name": "Deno: Run App",
            "request": "launch",
            "type": "pwa-node",
            "program": "index.js",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "deno",
            "runtimeArgs": [
                "run",
                "--inspect=127.0.0.1:3000",
                "--allow-net",
                "--allow-read",
                "--allow-env"
            ],
            "attachSimplePort": 3000
        }
    ]
}
