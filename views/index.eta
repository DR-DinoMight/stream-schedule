<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= it.title %></title>
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <main>
      <header>
        <h1>The Claw's Twitch Schedule</h1>
      </header>
      <div class="live-container">
        <% it.currentlyLiveUsers.forEach((user) => { %>
          <%~ includeFile('shared/live-card', {user}) %>
        <%}); %>
      </div>
      <div class="schedule-continer">
        <% it.sortedDays.forEach((day) => { %>
        <div class="day-container">
          <h3 class="day-container__day"><%= day %></h3>
          <ul class="streamers">
            <% it.schedules[day].forEach((user) => { %> <%~
            includeFile('shared/user', { user })%> <% }); %>
          </ul>
        </div>
        <% }); %>
      </div>
    </main>
  </body>
</html>
